<div class="mt-4">
  <form method="POST" action="">
    <div class="mb-3">
      <label for="search-input" class="form-label mb-0">Từ khóa</label>
      <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa để tìm kiếm..." />
    </div>

    <div class="mb-3">
      <label for="gender-input" class="form-label mb-0">Giới tính</label>
      <select name="gender" class="form-select" id="gender-input">
        <option value="" disabled selected>-- Chọn giới tính</option>
        <option value="male">Nam</option>
        <option value="female">Nữ</option>
        <option value="other">Khác</option>
      </select>
      <button type="submit" class="btn btn-primary mt-3">Tìm kiếm</button>
    </div>
  </form>
</div>